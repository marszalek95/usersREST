{% extends 'base.html.twig' %}

{% block body %}
<main>
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('fail') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="container col-sm-4">
            <h1>Create User</h1>

            {{ form(form) }}
            
        </div>
    </div>
</main>

{% endblock %} 
